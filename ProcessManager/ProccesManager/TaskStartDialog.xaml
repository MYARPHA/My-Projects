<Window x:Class="ProccesManager.TaskStartDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProccesManager"
        mc:Ignorable="d"
        Title="Запуск нового процесса" Height="200" Width="400" ResizeMode="NoResize" Background="#8785a2">
    <Grid Margin="10" Background="#8785a2">
        <TextBox x:Name="ProcessNameTextBox" Width="300" Height="25" VerticalAlignment="Top"/>
        <Button Content="Обзор" Width="75" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Background="#f6f6f6" Click="Browse_Click"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="ОК" Width="75" Click="Ok_Click" Background="#f6f6f6"/>
            <Button Content="Отмена" Width="75" Click="Cancel_Click" Background="#f6f6f6"/>
        </StackPanel>
 
    </Grid>
</Window>
